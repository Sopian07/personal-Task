    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>
    <!-- NavBar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" >
        <div class="container-lg">
          <div>
            <img src="/public/assets/logo.png" alt="">
          </div>                    
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item mx-5">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link" href="/blog">My Project</a>
                    </li> 
                </ul>
            </div>
            <div class="d-flex justity-content-end contact-me">
                <a href="/contact-me">
                  <button class="btn btn-dark" type="button" >contact Me</button>
                </a>
              </div>
          </div>        
      </nav>

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #DDE1E5;" >
    <div class="container-lg" style="width: 50%;">
        <form class="row g-3 justity-content">
          <h3 class="text-center">GET IN TOUCH</h3>
          <div class="col-12 ">
            <label for="inputProject" class="form-label">Name</label>
            <input type="text" class="form-control" id="inputName">
          </div>
          <div class="col-12">
            <label for="inputProject" class="form-label">Email</label>
            <input type="text" class="form-control" id="inputEmail">
          </div>  
          <div class="col-12">
            <label for="inputProject" class="form-label">Phone Number</label>
            <input type="text" class="form-control" id="inputNumber">
          </div>
          <div class="col-12">
            <label class="visually-hidden" for="autoSizingSelect">Preference</label>
            <select class="form-select" id="selectObeject">
              <option selected>Choose...</option>
              <option value="1">Frontend</option>
              <option value="2">Backend</option>
              <option value="3">Full-stack</option>
            </select>
          </div>      
          <div class="col-12">
            <label for="inputDescription" class="form-label">Your Message</label>
            <input type="textarea" class="form-control" id="message" style="resize:none;width:100%; height: 250px;" name="description">
          </div>          
          <button type="submit" class="btn btn-primary col-12" onclick="showData()">submit</button>
        </form>
  
      </div>
    </div>




</body>

</html>