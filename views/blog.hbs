<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #DDE1E5;" action="/blog" method="POST" >
 <div class="container-lg" style="width: 50%;">
      <form class="row g-3 justity-content" action="/blog" method="POST">
        <h3 class="text-center">Add My Project</h3>
        <div class="col-12">
          <label for="inputProject" class="form-label">Project Name</label>
          <input type="text" class="form-control" id="inputProject" name="inputProject">
        </div>
        <div class="col-md-6">
          <label for="inputStart" class="form-label">Start Date</label>
          <input type="date" class="form-control" id="inputStart" name="inputStartDate">
        </div>
        <div class="col-md-6">
          <label for="inputEnd" class="form-label">End Date</label>
          <input type="date" class="form-control" id="inputEnd" name="inputEndDate">
        </div>
        <div class="col-12">
          <label for="inputDescription" class="form-label">Description</label>
          <input type="textarea" class="form-control" id="inputDescription" style="resize:none;width:100%; height: 250px;" name="inputDescription">
        </div>
        <label for="inputDate" class="form-label">Technologies</label>
      <div class="col-12 d-flex">
        <div class="form-check flex-wrap col-6">
          <input class="form-check-input" type="checkbox" id="skillCheck">
          <label class="form-check-label" for="gridCheck">
            Node Js
          </label>
        </div>
        <div class="form-check flex-wrap col-6">
          <input class="form-check-input" type="checkbox" id="skillCheck">
          <label class="form-check-label" for="gridCheck">
            React Js
          </label>
        </div>
      </div>
      <div class="col-12 d-flex">
        <div class="form-check flex-wrap col-6">
          <input class="form-check-input" type="checkbox" id="skillCheck">
          <label class="form-check-label" for="gridCheck">
            Javascript
          </label>
        </div>
        <div class="form-check flex-wrap col-6">
          <input class="form-check-input" type="checkbox" id="skillCheck">
          <label class="form-check-label" for="gridCheck">
            Typescript
          </label>
        </div>
      </div>
        <div class="mb-2">
          <label class="form-label" for="exampleFormControlFile1" >Upload Image</label>
          <input class="form-control" type="file">      
        </div>        
          <button type="submit" class="btn btn-primary col-12" id="image">Submit</button>       
      </form>

    </div>
  </div>
